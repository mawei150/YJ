<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_main_color">

    <include
        android:id="@+id/header_view"
        layout="@layout/include_header_view" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_face_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/header_view"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabIndicatorColor="@color/mainColor"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabSelectedTextColor="@color/mainColor"
        app:tabTextColor="@color/font_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_face_layout" />




</RelativeLayout>