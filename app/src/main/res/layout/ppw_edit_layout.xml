<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#49212121">

    <LinearLayout
        android:id="@+id/ppwAnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="65dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shapes_select_photo_item"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_select_photo_item"
            android:gravity="center"
            android:text="编辑"
            android:textColor="#4482D5"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="invisible"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_select_photo_item"
            android:clickable="true"
            android:gravity="center"
            android:text="删除"
            android:textColor="#4482D5"
            android:textSize="17sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        android:background="@drawable/selector_shapes_select_photo_item"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/red"
        android:textSize="17sp" />

</FrameLayout>